<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailsFragment">

    <ImageView
        android:id="@+id/article_details_imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/articles_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:maxLines="2"
        android:text="Study Finds Another Condition "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_details_imageView" />

    <TextView
        android:id="@+id/article_details_by_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="By The"
        app:layout_constraintStart_toStartOf="@+id/articles_details_title"
        app:layout_constraintTop_toBottomOf="@+id/articles_details_title" />

    <TextView
        android:id="@+id/article_details_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Section"
        app:layout_constraintStart_toStartOf="@+id/article_details_by_line"
        app:layout_constraintTop_toBottomOf="@+id/article_details_by_line" />

    <TextView
        android:id="@+id/article_details_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="07-29-2022"
        app:layout_constraintStart_toStartOf="@+id/article_details_section"
        app:layout_constraintTop_toBottomOf="@+id/article_details_section" />
</androidx.constraintlayout.widget.ConstraintLayout>