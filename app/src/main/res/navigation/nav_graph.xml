<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.a7medelnoor.new_app.ui.home.HomeFragment"
        android:label="@string/toolbar_title"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/one"
        android:name="com.a7medelnoor.new_app.ui.first.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <argument
            android:name="result"
            app:argType="com.a7medelnoor.new_app.data.remote.model.Result" />
    </fragment>
    <fragment
        android:id="@+id/two"
        android:name="com.a7medelnoor.new_app.ui.second.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.a7medelnoor.new_app.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_home"
            app:destination="@id/home" />
        <argument
            android:name="result"
            app:argType="com.a7medelnoor.new_app.data.remote.model.Result" />
    </fragment>
</navigation>